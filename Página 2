    <script>
        function recuperarSenha() {
            const email = document.getElementById("email").value;

            if (email.trim() === "") {
                alert("Por favor, preencha seu e-mail.");
                return;
            }

            // Simulação de envio
            alert("Um link de recuperação foi enviado para: " + email);
        }
    </script>

